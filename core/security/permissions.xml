<?xml version="1.0" encoding="UTF-8"?>
<!-- Description of all permissions in the system -->
<modules>
	<module name="Users">
		<permission name="Login web interface" key="user_loginweb" uri="/user/login" menu="no" />
		<permission name="List Users" key="user_list" uri="/user/index" menu="yes" />
		<permission name="Show User" key="user_show" uri="/user/show" menu="no" />
		<permission name="Add a new user" key="user_add" uri="/user/add" menu="yes" />
		<permission name="Edit an user" key="user_edit" uri="/user/edit" menu="no" />
		<permission name="Grant permissions to others users" key="user_grant" uri="/user/permissions" menu="no" />
	</module>
	<module name="Mining">
		<permission name="List resources" key="mining_resource_list" uri="mining/listresource" menu="yes" />
		<permission name="Add a new resource" key="mining_resource_add" uri="mining/addresource" menu="yes" />
	</module>
</modules>